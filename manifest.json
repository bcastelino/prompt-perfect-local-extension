{
  "manifest_version": 3,
  "name": "Prompt Perfect Local",
  "version": "1.0.0",
  "description": "Enhance and organize your AI prompts with a local Chrome extension",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["openrouter_secrets.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["openrouter_secrets.js", "content.css"],
    "matches": [
      "https://chat.openai.com/*",
      "https://claude.ai/*",
      "https://bard.google.com/*",
      "https://www.perplexity.ai/*"
    ]
  }]
} 
